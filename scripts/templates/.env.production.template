# NestSync Development Environment - Production-Connected Configuration Template
# Copy this to .env when connecting to production Supabase services for development
# ⚠️  WARNING: This connects to REAL production data - use with extreme caution!

# Development Mode Identifier
DEVELOPMENT_MODE=production

# Frontend Environment Variables - Production Supabase
# TODO: Replace these with your actual production Supabase values
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
EXPO_PUBLIC_API_URL=https://nestsync-api.railway.app
EXPO_PUBLIC_GRAPHQL_URL=https://nestsync-api.railway.app/graphql
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_HOST_IP=localhost
EXPO_PUBLIC_BACKEND_URL=https://nestsync-api.railway.app

# Backend Environment Variables - Production
# TODO: Replace these with your actual production values
DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.your-project.supabase.co:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_KEY=your-production-supabase-service-key
REDIS_URL=redis://your-production-redis-url:6379
JWT_SECRET=your-production-jwt-secret-with-at-least-32-characters

# Production Development Settings
CORS_ORIGINS=["http://localhost:8082","http://localhost:19006","http://localhost:19000","https://nestsync-api.railway.app"]
ENVIRONMENT=production
DEBUG=false
TZ=America/Toronto

# Feature Flags for Production-Connected Development
ENABLE_DEBUG_LOGGING=false
ENABLE_HOT_RELOAD=true
SKIP_EMAIL_VERIFICATION=false

